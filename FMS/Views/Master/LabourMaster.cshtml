@{
    Layout = "_Layout";
    ViewData["Title"] = "Labour Master";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-edit"></i>
                        Labour Setup
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4 col-sm-2">
                            <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active" id="tab-LabourType" data-toggle="pill" href="#LabourType" role="tab" aria-controls="LabourType" aria-selected="true"><b>Labour Type</b></a>
                                <a class="nav-link" id="tab-LabourDetail" data-toggle="pill" href="#LabourDetail" role="tab" aria-controls="LabourDetail" aria-selected="false"><b>Labour Detail</b></a>
                                <a class="nav-link" id="tab-LabourRate" data-toggle="pill" href="#LabourRate" role="tab" aria-controls="LabourRate" aria-selected="false"><b>Labour Rate</b></a>
                            </div>

                        </div>
                        <div class="col-8 col-sm-10">
                            <div class="tab-content" id="vert-tabs-tabContent">
                                <div class="tab-pane text-left fade show active" id="LabourType" role="tabpanel" aria-labelledby="tab-LabourType">
                                    <!--Labour Type-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Labour Type</label>
                                                <input type="text" class="form-control" id="txtLabourType" tabindex="1">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label></label>
                                                <button type="button" tabindex="2" class="btn btn-block btn-outline-primary btn-labourtype-create mt-1" style=" margin-top: 9px !important;"><b>Submit</b></button>
                                            </div>
                                        </div>
                                        <div class="col-md-4"></div>
                                        <div class="col-md-12">
                                            <div id="loader" style="display:none;"></div>
                                            <div class="tblLabourType">
                                            </div>
                                        </div>
                                    </div>
                                    <!--.end Labour Type-->
                                </div>
                                <div class="tab-pane fade" id="LabourDetail" role="tabpanel" aria-labelledby="tab-LabourDetail">
                                    <!--Unit-->
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Labour Type</label>
                                                <select class="form-control  select2bs4" style="width: 100%;" name="LabourTypeId" tabindex="1">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Labour Name</label>
                                                <input type="text" class="form-control" id="txtLabourName" tabindex="2">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Address</label>
                                                <input type="text" class="form-control" id="txtAddress" tabindex="3">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Phone No</label>
                                                <input type="text" class="form-control" id="txtPhone" tabindex="4">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Reference</label>
                                                <input type="text" class="form-control" id="txtReference" tabindex="5">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Opening Balance</label>
                                                <input type="text" class="form-control" id="txtOpeningBalance" name="OpeningBalance" value="0" tabindex="6">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Balance Type:</label>
                                                <select class="form-control select2bs4" style="width: 100%;" name="ddnBalanceType" tabindex="7">
                                                    <option value="Dr" selected>Dr</option>
                                                    <option value="Cr">Cr</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6"></div>
                                        <div class="col-md-10"></div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label></label>
                                                <button type="button" tabindex="8" class="btn btn-block btn-outline-primary btn-labourdetail-create "><b>Submit</b></button>
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div id="loader" style="display:none;"></div>
                                            <div class="tblLabourDetail">
                                            </div>
                                        </div>
                                    </div>
                                    <!--.end Unit-->
                                </div>
                                <div class="tab-pane fade" id="LabourRate" role="tabpanel" aria-labelledby="tab-LabourRate">
                                    <!--Labour Rate-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Date</label>
                                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" name="date" tabindex="1"/>
                                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Item</label>
                                                <select class="form-control  select2bs4" style="width: 100%;" name="ItemId" tabindex="2">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="">Rate</label>
                                                <input type="text" class="form-control" id="txtRate" name="Rate" tabindex="3">
                                            </div>
                                        </div>
                                        <div class="col-md-6"></div>
                                        <div class="col-md-10"></div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label></label>
                                                <button type="button" tabindex="4" class="btn btn-block btn-outline-primary btn-labourrate-create "><b>Submit</b></button>
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div id="loader" style="display:none;"></div>
                                            <div class="tblLabourRate">
                                            </div>
                                        </div>
                                    </div>
                                    <!--.end Labour Rate-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
@await Html.PartialAsync("_FooterScript")
<script src="~/scripts/FormScript.js"></script>
<script src="~/viewscripts/master/labourmaster.js"></script>
<script>
    $('#reservationdate').datetimepicker({
        format: 'DD/MM/YYYY'
    });
</script>

