@{
    ViewData["Title"] = "Journal";
    Layout = "_Layout";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">  
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="tab-Journal" data-toggle="pill" href="#Journal" role="tab" aria-controls="Journal" aria-selected="true"><b>Journal</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tab-JournalList" data-toggle="pill" href="#JournalList" role="tab" aria-controls="JournalList" aria-selected="false"><b>JournalList</b></a>
                </li>
            </ul>
            <div class="tab-content pt-3" id="custom-content-below-tabContent">
                <div class="tab-pane fade show active" id="Journal" role="tabpanel" aria-labelledby="tab-Journal">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card card-primary card-outline">
                                        <div class="card-header">
                                    <i class="fa-solid fa-file-invoice"></i>
                                    Journal Voucher
                                            <button class="btn btn-primary btn-link" id="addJournalRowBtn" style="border: 0px;color: #fff; background-color:#337AB7; border-color: #3C8DBC; border-radius: 4px; float:right"> <i class="fa-solid fa-plus"></i></button>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                <div id="loader" style="display:none;"></div>
                                                        <label>Voucher Date</label>
                                                        <div class="input-group  date" id="reservationdate3" data-target-input="nearest">
                                                            <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate3" name="VoucherDate" />
                                                            <div class="input-group-append" data-target="#reservationdate3" data-toggle="datetimepicker">
                                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6"></div>
                                                <div class="col-md-3">
                                                    <div class="form-group row float-right">
                                                        <label>Voucher No</label>
                                                        <input type="text" class="form-control" disabled name="VoucherNo">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                           
                                                    <table class="table" id="tblJournal">
                                                        <thead>
                                                            <tr>
                                                                <th style="width: 10%;">Dr/Cr</th>
                                                                <th style="width: 70%;">Journal</th>
                                                                <th style="width: 10%;">Dr</th>
                                                                <th style="width: 10%;">Cr</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Narration:</label>
                                                        <textarea class="form-control" rows="3" placeholder="Enter ..." name="Narration"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer clearfix">
                                            <button type="button" id="btnSave" class="btn btn-primary" style="float:right">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
                <div class="tab-pane fade" id="JournalList" role="tabpanel" aria-labelledby="tab-JournalList">
                    <div class="card card-primary card-outline">
                        <div class="card-header ">
                            <i class="fa-solid fa-file-invoice"></i>
                            Journal Voucher
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="loader" style="display:none;"></div>
                                    <div class="tblJournalList">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section additionalScripts {
    <script src="~/scripts/FormScript.js"></script>
    <script src="~/viewscripts/accounting/journal.js"></script>
    <script>
        $('#reservationdate3').datetimepicker({
            format: 'DD/MM/YYYY'
        });
    </script>
}

