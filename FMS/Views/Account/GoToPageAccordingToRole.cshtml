@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Factory Management System</title>

    @await Html.PartialAsync("_Head")

</head>
<body class="hold-transition login-page">

    @Html.AntiForgeryToken()

    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="brand-link">
                    @*<img src="~/dist/img/logo.jpg" alt="Logo" class="brand-image" style="opacity: .8; max-height:95px; float:none">*@
                </a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">You Dont Have Any Role Allocated Yet</p>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_FooterScript")

    @if (TempData["SuccessMsg"] != null)
    {
        <script>
            toastr.success('@TempData["SuccessMsg"]');
        </script>
    }
</body>
</html>

