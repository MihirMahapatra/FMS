@model BranchAllocationModel
@{
    ViewData["Title"] = "Roles";
    Layout = "_Layout";
}
@section additionalStyles {

}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Allocate Branch</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">Allocate Branch</h3>
                        </div>

                        <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>User</label>
                                            <select class="form-control select2bs4" style="width: 100%;" name="UserId">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Branch</label>
                                            <select class="form-control select2bs4" style="width: 100%;" name="BranchId">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                       
                            <button type="button" class="btn btn-primary" style="float:right" id="btnBranch">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th hidden>Id</th>
                                        <th>Branch</th>
                                        <th>User</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                               
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section additionalScripts {
<script src="~/scripts/formscript.js"></script>
<script src="~/viewscripts/admin/allocatebranch.js"></script>

@if (TempData["SuccessMsg"] != null)
{
    <script>
        toastr.success('@TempData["SuccessMsg"]');
    </script>
}
@if (TempData["ErrorMsg"] != null)
{
    <script>
        toastr.error('@TempData["ErrorMsg"]');
    </script>
}
}