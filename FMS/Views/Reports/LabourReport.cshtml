@{
    Layout = "_Layout";
    ViewData["Title"] = "Labor Report";
}
<style>
    /* Standard CSS */
    .company-info {
        display: block !important;
    }

    .SummerizedLabourReportTable {
        margin-top: 20px !important; /* Adjust the margin based on your needs */
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid ">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Labour Report</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="tab-SummerizedReport" data-toggle="pill" href="#SummerizedReport" role="tab" aria-controls="SummerizedReport" aria-selected="true"><b>Summerized Report</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tab-DetailedReport" data-toggle="pill" href="#DetailedReport" role="tab" aria-controls="DetailedReport" aria-selected="false"><b>Detailed Report</b></a>
                        </li>
                    </ul>
                    <div class="tab-content pt-3" id="custom-content-below-tabContent">
                        <div class="tab-pane fade show active" id="SummerizedReport" role="tabpanel" aria-labelledby="tab-SummerizedReport">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <i class="fa-solid fa-file-invoice"></i>
                                    Condenced List
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Labour Type</label>
                                                <select class="form-control select2bs4" style="width: 100%" name="ddlSummerizedLabourTypes">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>From Date</label>
                                                <div class="input-group  date" id="FromDate" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#FromDate" name="FromDate" />
                                                    <div class="input-group-append" data-target="#FromDate" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>To Date</label>
                                                <div class="input-group  date" id="ToDate" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#ToDate" name="ToDate" />
                                                    <div class="input-group-append" data-target="#ToDate" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <button type="button" id="btnViewSummerized" class="btn btn-primary" style="float:left; margin-top:32px">View</button>
                                        </div>
                                        <div class="col-md-12">
                                            <div id="loader" style="display:none;"></div>
                                            <div class="tblSummerizedLabourList" id="example1_wrapper">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-9"></div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <div class="form-group">
                                                            <button type="button" id="BtnPrintSummarized" class="btn btn-primary" style="float:right; display:none; margin-top:32px">Print</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="DetailedReport" role="tabpanel" aria-labelledby="tab-DetailedReport">
                            <div class="card card-primary card-outline">
                                <div class="card-header ">
                                    <i class="fa-solid fa-file-invoice"></i>
                                    Detailed List
                                </div>
                                <div class="card-body ">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>Labour Type</label>
                                                <select class="form-control select2bs4" style="width: 100%" name="ddlDetailedLabourTypes">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Labour</label>
                                                <select class="form-control select2bs4" style="width: 100%" name="ddlLabour" disabled>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>From Date</label>
                                                <div class="input-group  date" id="FromDateDetailed" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#FromDateDetailed" name="FromDateDetailed" />
                                                    <div class="input-group-append" data-target="#FromDateDetailed" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label>To Date</label>
                                                <div class="input-group  date" id="ToDateDetailed" data-target-input="nearest">
                                                    <input type="text" class="form-control datetimepicker-input" data-target="#ToDateDetailed" name="ToDateDetailed" />
                                                    <div class="input-group-append" data-target="#ToDateDetailed" data-toggle="datetimepicker">
                                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" id="btnViewDetailed" style="float:left;  margin-top:32px" class="btn btn-primary">View</button>
                                        </div>
                                        
                                        <div id="loader" style="display:none;"></div>
                                        <div class="col-md-12">
                                            <div class="tblDetailedLabourList" id="example2_wrapper">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-9"></div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <div class="form-group hddiv">
                                                            <button type="button" id="BtnPrint" class="btn btn-primary" style="float:right; display:none; margin-top:32px">Print</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </section>
</div>
@section additionalScripts {
<script src="~/scripts/FormScript.js"></script>
<script src="~/scripts/datepicker.js"></script>
<script src="~/viewscripts/reports/labourreport.js"></script>
<script>
    $('#FromDate').datetimepicker({
        format: 'DD/MM/YYYY'
    });
    $('#ToDate').datetimepicker({
        format: 'DD/MM/YYYY'
    });
    $('#FromDateDetailed').datetimepicker({
        format: 'DD/MM/YYYY'
    });
    $('#ToDateDetailed').datetimepicker({
        format: 'DD/MM/YYYY'
    });
</script>
}